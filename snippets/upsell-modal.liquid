      <li data-handle="dj-snake-bracelet">
      	{{ 'ajax-loader.gif' | asset_url | img_tag }}
      </li>
      <li data-handle="blasterjaxx-bracelet">
      	{{ 'ajax-loader.gif' | asset_url | img_tag }}
      </li>
      <li data-handle="adventure-club">
