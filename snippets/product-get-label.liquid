{% if show_label_hot %}
	<div class="label label--hot mb-3 mr-3 text-nowrap{% if label_hot != 'true' %} d-none-important{% endif %}" data-js-product-label-hot>{{ 'products.product.label.hot' | t }}</div>
{% endif %}
{% if show_label_new %}
	<div class="label label--new mb-3 mr-3 text-nowrap{% if label_new != 'true' %} d-none-important{% endif %}" data-js-product-label-new>{{ 'products.product.label.new' | t }}</div> 
{% endif %}
{% if show_label_sale %}
    {%- if compare_at_price > price -%}
    	{%- assign sale_percent = price | times: 100 | divided_by: compare_at_price | minus: 100 | times: -1 -%}
    	<div class="label label--sale mb-3 mr-3 text-nowrap" data-js-product-label-sale>{{ 'products.product.label.sale' | t: percent: sale_percent }}</div>                        
    {%- else -%}
    	<div class="label label--sale mb-3 mr-3 text-nowrap d-none-important" data-js-product-label-sale></div>
    {%- endif -%}   
{% endif %}
{% if show_label_in_stock %}
	<div class="label label--in-stock mb-3 mr-3 text-nowrap{% if available == false %} d-none-important{% endif %}" data-js-product-label-in-stock>{{ 'products.product.label.in_stock' | t }}</div>
{% endif %}
{% if show_label_out_stock %}
	<div class="label label--out-stock mb-3 mr-3 text-nowrap{% if available %} d-none-important{% endif %}" data-js-product-label-out-stock>{{ 'products.product.label.out_stock' | t }}</div>
{% endif %}