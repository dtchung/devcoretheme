<!-- /snippets/comment.liquid -->
{% comment %}

  This snippet generates the structure of a comment.
  It is used to show not only recent comments, but also comments that were
  just published but not yet approved.

  More information:
   - http://docs.shopify.com/themes/liquid-variables/comment

{% endcomment %}

 
<div class="comment-item">
  <div class="head">
    <span class="name">{{ comment.author }} </span><span class="time"> -  {{ comment.created_at | date: format: 'month_day_year' }}</span>
    <ul class="meta-post">      
      <li class="comments"><a href="#"><span class="icon"><i class="fa fa-comment" aria-hidden="true"></i></span><span class="count">{{article.comments_count  | strip_html}} Comments</span></a></li>
    </ul>
  </div>
  <p class="comment">{{ comment.content | strip_html}}</p>
</div>