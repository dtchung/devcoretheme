// Text colors
$color-text: {{ settings.color_text }};
$color-sale-text: {{ settings.color_sale_text }};

// Button colors
$color-btn-primary: {{ settings.color_button }};
$color-btn-primary-text: {{ settings.color_button_text }};

// Link buttons and secondary cta
$color-link: $color-text;

// Backgrounds
$color-body: {{ settings.color_body_bg }};
$color-bg: {{ settings.color_body_bg }};

// Border colors
$color-border: {{ settings.color_borders }};
/*FOOTER STYLE*/
.footer {
  background-color: transparent;
  clear: both;
  padding-top: 0px;
}
#footer-menu .widget-title {
    -webkit-box-flex: 1;
    -ms-flex: 1 1 auto;
    flex: 1 1 auto;
    margin: 10px 0;
    font-weight: 600;
    color: #222;
    letter-spacing: 0px;
    line-height: 1.428;
    font-size: 24px;
}
#footer-menu .nav_link_icon {
    width: 12px;
    height: 12px;
    position: relative;
    display: block;
    ms-flex: 0 0 auto;
    flex: 0 0 auto;
}
.footer__top p {
    margin-bottom: 1.3em;
    line-height: 24px;
}
.footer .widgettitle {
  color: $color-btn-primary;
  margin: 0 0 30px;
}
.footer .widget-text .widgettitle,
.footer .widget-newsletter .widgettitle {
  margin-bottom: 40px;
}
.footer .widget-text .subtitle {
  font-size: 14px;
  color: $color-btn-primary;
  font-weight: 400;
  margin: 0 0 5px;
  text-transform: uppercase;
}
.footer .widget-text .des {
  font-size: 13px;
  line-height: 24px;
  color: $color-btn-primary;
  margin: 0 0 15px;
}

.newsletter-form .des {
  font-size: 14px;
  color: $color-btn-primary;
  margin: -4px 0 0;
  line-height: 24px;
}
.newsletter-form .newsletter-block {
  width: 100%;
  position: relative;
}
.newsletter-form .newsletter-block .newsletter-info {
  font-size: 13px;
  color: $color-btn-primary;
  background-color: $color-bg;
  outline: 0;
  height: 40px;
  line-height: 40px;
  padding: 0 100px 0 20px;
  border-radius: 20px;
  width: 100%;
  border: none;
}
.newsletter-form .newsletter-block .submit {
  float: right;
  font-size: 14px;
  color: $color-btn-primary-text;
  text-transform: uppercase;
  font-weight: 600;
  line-height: 40px;
  border-radius: 0 20px 20px 0;
  position: absolute;
  z-index: 1;
  right: -1px;
  top: 0;
  padding: 0 15px;
  border:none;
}
.newsletter-form .newsletter-block .submit:hover {
  background-color: $color-btn-primary;
}
.footer .widget-newsletter {
  border-bottom: solid 1px rgba(255, 255, 255, 0.2);
  margin-bottom: 38px;
  padding-bottom: 30px;
}
.footer .widget-custom-menu ul li a {
  color: $color-btn-primary;
  line-height: 30px;
}
.footer .list-socials {
  margin:  0;
}
.footer .list-socials li a {
  border-radius: 3px;
    background-color: transparent;
    color: #222;
    font-size: 18px;
    width: 20px;
    height: 20px;
    margin: 0 8px;
}
.footer .list-socials li:first-child a{
 	margin:0px; 
}
.footer .footer-note {
  padding: 20px 0;
  border-top: solid 1px rgba(255, 255, 255, 0.2);
}
.coppy-right .content,.right-content p{
  font-size: 14px;
  color: #222;
  line-height: 20px;
  margin: 0;
}
.coppy-right .content .site-name {
  font-weight: 600;
  color:$color-link;
}
.list-payment li {
  display: inline-block;
  list-style: none;
  margin: 5px 7px;
}

.newsletter-form.layout3 .newsletter-block .newsletter-info {
  border-radius: 3px;
  padding-left: 45px;
}
.newsletter-form.layout3 .newsletter-block .submit {
  border-radius: 0 5px 5px 0;
  border:none;
}
.newsletter-form.layout3 .newsletter-block::before {
  left: 20px;
  margin: 0;
  top: 0;
  text-align: center;
  position: absolute;
  z-index: 1;
  display: inline-block;
  content: "\f003";
  font-family: "FontAwesome";
  font-size: 15px;
  color: #888;
  line-height: 40px;
}
.footer.layout2 .widget-newsletter {
  border: none;
}
.footer.layout2 .newsletter-form .des {
  font-size: 13px;
  margin-bottom: 35px;
}
.footer.layout2 .main-footer {
  padding-bottom: 10px;
}
.footer.layout2 .auto-clear .col-lg-3:nth-child(4n+1) {
  clear: none;
}
.footer.layout3 .footer-note .coppy-right {
  float: left;
  margin-right: 50px;
}
.footer.layout3  .list-socials {
  margin: 0;
}
.footer.layout3 .newsletter-form .des .number {
  color:$color-btn-primary-text;
  font-size: 16px;
}
.footer.layout3 .footer-note {
  padding: 15px 0 25px;
}
#footer-menu li {
    list-style: none;
    margin-left: 20px;
    display: inline-block;
}
#footer-menu a{
  	color: #222;
}
