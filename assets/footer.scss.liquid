.footer-contact a:not(:hover) {
    color: #222;
}
ul.list-payment {
    margin-top: 10px;
}
ul.list-payment img{
  	max-height: 30px;
}
.back-to-top {
  bottom: 30px;
  display: none;
  font-weight: 700;
  font-size: 18px;
  letter-spacing: 2px;
  position: fixed;
  right: 20px;
  width: 30px;
  height: 30px;
  line-height: 26px;
  text-align: center;
  text-decoration: none;
  transform-origin: 100% 50% 0;
  -o-transform-origin: 100% 50% 0;
  -webkit-transform-origin: 100% 50% 0;
  z-index: 99999  ;
  overflow: hidden;
  border: solid 1px;
  padding: 0;
  background-color: $color-bg;
}
.back-to-top::before {
  content: "\f106";
  font-family: "FontAwesome";
  position: absolute;
  color: $color-sale-text;
  z-index: 111;
  width: 100%;
  height: 100%;
  text-align: center;
  display: inline-block;
  top: 0;
  left: 0;
  right: 0;
}
.back-to-top:hover::before {
  color: $color-btn-primary-text;
}
.back-to-top.show {
	display: block;
}